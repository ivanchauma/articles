    //"rootDir": "./src",   
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json",  // Referencing tsconfig.node.json
      "path": "./tsconfig.app.json"
    }
  ]
}
